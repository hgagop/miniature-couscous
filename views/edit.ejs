<%- include('./partials/header') %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= wine.title %> </div>
    <form action="/inventory/<%= wine._id %>?_method=PUT" method="post" class="ui form">
        <div class="field">
            <label>Name</label>
            <input type="text" name="wine[name]" value="<%= wine.name %>" required>
        </div>
        <div class="field">
            <label>Location</label>
            <input type="text" name="wine[location]" value="<%= wine.location %>" required>
        </div>
        <div class="field">
            <label>Quantity</label>
            <input type="number" name="wine[quantity]" value="<%= wine.quantity %>" required>
        </div>
        <div class="field">
            <label>Type</label>
            <input type="text" name="wine[type]" value="<%= wine.type %>" required>
        </div>
        <div class="field">
            <label>Rating</label>
            <input type="text" name="wine[rating]" value="<%= wine.rating %>" required>
        </div>
        <input class="ui violet basic button" type="submit">
    </form>
</div>

<%- include('./partials/footer') %>